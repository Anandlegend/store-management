import React, { useState } from "react";

const AddProduct = () => {
  const [productName, setProductName] = useState("");
  const [productImageURL, setProductImageURL] = useState("");
  const [price, setPrice] = useState("");
  const [stock, setStock] = useState("");
  const [tags, setTags] = useState("");

  const handleSubmit = (e) => {
    e.preventDefault();

    const newProduct = {
      productName,
      productImageURL,
      price: parseFloat(price),
      stock: parseInt(stock, 10),
      tags: tags.split(",").map((tag) => tag.trim()),
    };

    console.log("New Product:", newProduct);

    // Reset form fields
    setProductName("");
    setProductImageURL("");
    setPrice("");
    setStock("");
    setTags("");

    // Here you can add your API call or state update logic to save product
  };

  return (
    <div style={styles.container}>
      <form onSubmit={handleSubmit} style={styles.form}>
        <h2 style={{ textAlign: "center", marginBottom: 24, fontWeight: "bold" }}>
          Add New Product
        </h2>

        <label style={styles.label}>Product Name</label>
        <input
          type="text"
          placeholder="Enter product name"
          value={productName}
          onChange={(e) => setProductName(e.target.value)}
          style={styles.input}
          required
        />

        <label style={styles.label}>Product Image URL</label>
        <input
          type="url"
          placeholder="Enter image URL"
          value={productImageURL}
          onChange={(e) => setProductImageURL(e.target.value)}
          style={styles.input}
        />

        <label style={styles.label}>Price</label>
        <input
          type="number"
          min="0"
          step="0.01"
          placeholder="Enter price"
          value={price}
          onChange={(e) => setPrice(e.target.value)}
          style={styles.input}
          required
        />

        <label style={styles.label}>Stock</label>
        <input
          type="number"
          min="0"
          placeholder="Enter stock"
          value={stock}
          onChange={(e) => setStock(e.target.value)}
          style={styles.input}
          required
        />

        <label style={styles.label}>Tags (comma-separated)</label>
        <input
          type="text"
          placeholder="Enter tags, separated by commas"
          value={tags}
          onChange={(e) => setTags(e.target.value)}
          style={styles.input}
        />

        <button type="submit" style={styles.button}>
          Add Product
        </button>
      </form>
    </div>
  );
};

const styles = {
  container: {
    minHeight: "90vh",
    backgroundColor: "#f5f7fa",
    display: "flex",
    justifyContent: "center",
    alignItems: "center",
  },
  form: {
    backgroundColor: "white",
    padding: 32,
    borderRadius: 8,
    width: 360,
    boxShadow:
      "0 1px 3px rgb(0 0 0 / 0.1), 0 1px 2px rgb(0 0 0 / 0.06)",
  },
  label: {
    fontWeight: "bold",
    display: "block",
    marginBottom: 6,
    fontSize: 14,
    color: "#333",
  },
  input: {
    width: "100%",
    padding: "10px 12px",
    marginBottom: 20,
    borderRadius: 4,
    border: "1px solid #cbd5e0",
    fontSize: 14,
    boxSizing: "border-box",
  },
  button: {
    width: "100%",
    padding: "12px",
    borderRadius: 6,
    border: "none",
    backgroundColor: "#22c55e",
    color: "white",
    fontWeight: "bold",
    cursor: "pointer",
    fontSize: 16,
  },
};

export default AddProduct;

